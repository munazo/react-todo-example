root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100

[*.html]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 0
trim_trailing_whitespace = false

[.eslintrc]
indent_style = space
indent_size = 2

[.stylintrc]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.styl]
indent_style = space
indent_size = 2
